<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTransf"
        android:layout_width="149dp"
        android:layout_height="64dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="342dp"
        android:backgroundTint="#3C883F"
        android:onClick="btnTransf"
        android:text="Transferir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="564dp"
        android:ems="10"
        android:hint="DIGITE SEU SALDO"
        android:inputType="number|numberDecimal"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeposit"
        android:layout_width="149dp"
        android:layout_height="61dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="342dp"
        android:backgroundTint="#3C883F"
        android:onClick="btnDeposit"
        android:text="Depositar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="449dp"
        android:backgroundTint="#3C883F"
        android:onClick="btnPagar"
        android:text="Pagar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="145dp"
        android:layout_height="63dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="451dp"
        android:backgroundTint="#3C883F"
        android:onClick="btnPix"
        android:text="Pix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>